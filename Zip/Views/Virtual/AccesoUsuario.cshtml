
@{
    ViewBag.Title = "Asignacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section beforeStyles{
    <style>
        #modalUsuarioEvento {
            padding-right: 17px !important;
        }
        .videosCon .videosLabel{
            color: #dd4b39;
        }
    </style>
}
<section class="content-header">
    <h1 style="text-transform: uppercase;">
        @ViewBag.DescripcionHijo
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @ViewBag.DescripcionPadre</a></li>
        <li class="active">@ViewBag.DescripcionHijo</li>
    </ol>
</section>

<section class="content">
    <div class="box box-primary">
        <div class="box-body">
            <div class="table-responsive" style="min-height:calc(100vh - 200px);">
                <table id="gridEventos" class="table table-bordered table-striped dt-responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th style="width:40%;" id="roNombre">Nombre</th>
                            <th style="width:10%;">Fecha</th>
                            <th style="width:30%;">Expositor</th>
                            <th style="width:10%;">Acceso</th>
                            <th style="width:10%;">Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" data-backdrop="static" data-keyboard="false" id="modalListaUsuarioEvento">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="">Lista usuarios asginados</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" id="txtIdEvento" />
                <div class="row">
                    <div class="col-md-12 text-right">
                        <div class="form-group">
                            <a id="btnAgregarEventoUsuario" class="btn btn-primary"><i class="fa fa-plus-circle"></i>  Agregar</a>
                        </div>
                    </div>
                </div>
                <div class="table-responsive" style="min-height:calc(100vh - 450px);">
                    <table id="gridEventoUsuario" class="table table-bordered table-striped dt-responsive nowrap" style="width:100%">
                        <thead>
                            <tr>
                                <th style="width:45%;">Nombre</th>
                                <th style="width:15%;">Inicio</th>
                                <th style="width:15%;">Fin</th>
                                <th style="width:15%;">Acciones</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"> Aceptar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" data-backdrop="static" data-keyboard="false" id="modalUsuarioEvento">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="">Agregar</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" id="txtIdEventoUsuario" />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="">Usuario<span class="required_field">*</span></label>
                            <select class="form-control select2" id="cboUsuario">
                                <option value="0">Seleccione</option>
                            </select>
                            <span class="help-block hide">Este campo es obligatorio</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">Fecha inicio<span class="required_field">*</span></label>
                            <div class="input-group date">
                                <input type="text" class="form-control validar uppercase pull-right" id="txtFechaInicio" readonly style="background-color:#FFF;">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                            </div>
                            <span class="help-block hide">Este campo es obligatorio</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">Fecha fin<span class="required_field">*</span></label>
                            <div class="input-group date">
                                <input type="text" class="form-control validar uppercase pull-right" id="txtFechaFin" readonly style="background-color:#FFF;">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                            </div>
                            <span class="help-block hide">Este campo es obligatorio</span>
                        </div>
                    </div>
                </div>
                @*<div class="row" id="containerVideos">
                   
                </div>
                <div class="row">
                    <div class="col-md-12 hide" id="sinVideos" style="color:#dd4b39">
                        No se selecciono ningún video
                    </div>
                </div>*@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Aceptar</button>
                <button type="button" id="btnGuardarEventoUsuario" class="btn btn-primary"><i class="fa fa-save"></i> Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script>
        var urlListEventoAsignacionPaged = '@Url.Action("ListEventoAsignacionPaged", "Virtual")';
        var urlListUsuarioSinAsignar = '@Url.Action("ListUsuarioSinAsignar", "Virtual")';
        var urlListEventoUsuarioAsignadoPaged = '@Url.Action("ListEventoUsuarioAsignadoPaged", "Virtual")';
        var urlSaveEventoUsuario = '@Url.Action("SaveEventoUsuario", "Virtual")';
        var urlDeleteEventoUsuario = '@Url.Action("DeleteEventoUsuario", "Virtual")';
        var urlListEventoUsuarioVirtualVideoByEvento = '@Url.Action("ListEventoUsuarioVirtualVideoByEvento", "Virtual")';
    </script>
    <script src="~/js/pages/Virtual/AccesoUsuario.min.js?v=@ViewBag.NumeroRelease"></script>
}

