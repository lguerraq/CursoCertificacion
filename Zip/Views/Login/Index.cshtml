
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width" />
    <title>TECH LMG | Login</title>
    <link rel="icon" type="image/png" href="~/images/LogoEmpresa/Logo_50.ico" />
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Plugins/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Plugins/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Plugins/Ionicons/css/ionicons.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/AdminLTE.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Plugins/iCheck/square/blue.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <style>
        .container_loadin {
            width: 100%;
            height: 100%;
            background-color: #808080;
            opacity: 0.5;
            z-index: 99999;
            position: fixed;
            top: 0;
            left: 0px;
            text-align: center;
            padding-top: 15%;
            display: none;
            cursor: progress;
        }

        .container_loadin_img {
            text-align: center;
            z-index: 999999;
            position: fixed;
            top: 30%;
            left: 48%;
            display: none;
        }

        .blockOverlay {
            z-index: 99999 !important;
        }

        .blockMsg {
            z-index: 1000000 !important;
        }

        #txtCapcha {
            text-transform: uppercase;
        }
    </style>
    <style>
            body {
                background-image: url(@Url.Content("~/assets/images/portada_login02.jpg"));
                background-size: 100% 100%;
                background-repeat: no-repeat;
                width: 100%;
                height: 100vh;
                background-color: #699;
            }
    </style>
</head>
<body class="hold-transition login-page">
    <div class="container_loadin gifLoadingGeneral" id="container_loadin_fondo">
    </div>
    <div class="container_loadin_img gifLoadingGeneral" id="container_loadin_imagen">
        <img src="~/images/loading.gif" width="50" alt="Error carga imagen" /> <br />
        <span style=""><b>Procesando..</b></span>
    </div>
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="login-box-body" style="padding: 20px; -webkit-box-shadow: 0 3px 15px rgba(0,0,0,0.5); -moz-box-shadow: 0 3px 15px rgba(0,0,0,0.5); box-shadow: 0 3px 15px rgba(0,0,0,0.5); -webkit-background-clip: padding-box;">
            <div class="login-logo text-center" style="margin: 4rem 0;">
                <img src="~/images/LogoEmpresa/Logo.png" alt="Error img" style="width:80%;" />
            </div>
            <div>
                <div class="form-group has-feedback">
                    <input id="txtUsuario" type="text" class="form-control" placeholder="Usuario" autocomplete="off">
                    <i class="fa fa-user form-control-feedback"></i>
                </div>
                <div class="form-group has-feedback">
                    <input id="txtPassword" type="password" class="form-control" placeholder="Contraseña" autocomplete="off">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-md-12" style="color:#dd4b39">
                        <span id="lblMensajeGeneral"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12" style="color:#dd4b39">
                        <span>@ViewBag.LoginOut</span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <!-- /.col -->
                    <div class="col-md-12 text-center">
                        <a id="btnIniciarSesion" class="btn btn-primary btn-block btn-flat">Iniciar sesión</a>
                    </div>
                    <!-- /.col -->
                </div>
                <br />
            </div>
        </div>
        <!-- /.login-box-body -->
    </div>

    <!-- jQuery 3 -->
    <script src="~/Plugins/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Plugins/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- jQuery blockUI plugin -->
    <script src="~/Plugins/blockUI/blockUI.min.js"></script>
    <!-- iCheck -->
    <script src="~/Plugins/iCheck/icheck.js"></script>
    <script src="~/js/util/DBR.js"></script>
    <!-- reCapcha -->
    <script src="https://www.google.com/recaptcha/api.js?render=@Configuracion.reCapchaKeyWeb"></script>
    <script>
        var reCapchaKeyWeb = "@Configuracion.reCapchaKeyWeb";
        var urlValidarUsuario = '@Url.Action("ValidarUsuario", "Login")';
        var urlUsuario = '@Url.Action("Bienvenida", "Home")';
        var urlGetCaptchaImage = '@Url.Action("GetCaptchaImage", "Login")';
    </script>
    <script src="~/js/pages/login/login.js?v=@ViewBag.NumeroRelease"></script>
</body>
</html>
