
@{
    ViewBag.Title = "Empresas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1 style="text-transform: uppercase;">
        @ViewBag.DescripcionHijo
    </h1>
    <ol class="breadcrumb">
        <li><a><i class="fa fa-dashboard"></i> @ViewBag.DescripcionPadre</a></li>
        <li class="active">@ViewBag.DescripcionHijo</li>
    </ol>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-body">
            <input type="hidden" value="0" id="txtIdDocumentoPadre" />
            <div class="row">
                <div class="col-md-12 text-right">
                    <div class="form-group">
                        <a id="btnAgregar" class="btn btn-primary"><i class="fa fa-plus-circle"></i>  Agregar</a>
                    </div>
                </div>
            </div>
            <div class="table-responsive" style="min-height:calc(100vh - 250px);">
                <table id="gridEmpresas" class="table table-hover dt-responsive nowrap " style="width:100%">
                    <thead>
                        <tr>
                            <th style="width:15%">RUC</th>
                            <th style="width:30%">Razón social</th>
                            <th style="width:25%">Nombre comercial</th>
                            <th style="width:20%">Responsable</th>
                            <th style="width:10%">Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" data-backdrop="static" data-keyboard="false" id="modalEmpresa">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="lblTitleAgregarEmpresa">Agregar</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" value="0" id="txtIdEmpresa" />
                <input type="hidden" value="0" id="txtIdUsuario" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">Ruc:<span class="required_field">*</span></label>
                            <input type="text" class="form-control validar" id="txtRuc" autocomplete="off" maxlength="11">
                            <span class="help-block hide">Este campo es obligatorio</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">Razón social:<span class="required_field">*</span></label>
                            <input type="text" class="form-control validar" id="txtRazonSocial" autocomplete="off" maxlength="250">
                            <span class="help-block hide">Este campo es obligatorio</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">Nombre comercial:<span class="required_field">*</span></label>
                            <input type="text" class="form-control validar" id="txtNombreComercial" autocomplete="off" maxlength="250">
                            <span class="help-block hide">Este campo es obligatorio</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">Dirección fiscal:<span class="required_field">*</span></label>
                            <input type="text" class="form-control validar" id="txtDireccionFiscal" autocomplete="off" maxlength="250">
                            <span class="help-block hide">Este campo es obligatorio</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">Frecuencia de notificación:</label>
                            <select class="form-control" id="cboFrecuencia">
                                <option value="0">Seleccione</option>
                                <option value="1">Diario</option>
                                <option value="2">Interdiario</option>
                                <option value="3">Semanal</option>
                                <option value="4">Mensual</option>
                            </select>
                            <span class="help-block hide">Este campo es obligatorio</span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h4 style="background-color:#f7f7f7; font-size: 18px; text-align: center; padding: 7px 10px; margin-top: 0;">
                            RESPONSABLE DE LA EMPRESA
                        </h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">Usuario:<span class="required_field">*</span></label>
                            <input type="text" class="form-control validar" id="txtLogin" autocomplete="off" maxlength="20">
                            <span class="help-block hide">Este campo es obligatorio</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">N°Documento: <span class="required_field">*</span></label>
                            <div class="input-group">
                                <input type="text" class="form-control validar" id="txtNumeroDocumento" autocomplete="off" maxlength="20">
                                <div class="input-group-addon" data-toggle="tooltip" data-placement="bottom" title="Buscar" id="btnBuscarPorDni" style="cursor:pointer;">
                                    <i class="fa fa-search"></i>
                                </div>
                            </div>
                            <span class="help-block hide">Este campo es obligatorio</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">Nombres: <span class="required_field">*</span></label>
                            <input type="text" class="form-control validar uppercase" id="txtNombres" autocomplete="off" maxlength="50">
                            <span class="help-block hide">Este campo es obligatorio</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">Apellido Paterno: <span class="required_field">*</span></label>
                            <input type="text" class="form-control validar uppercase" id="txtApellidoPaterno" autocomplete="off" maxlength="50">
                            <span class="help-block hide">Este campo es obligatorio</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">Apellido Materno: <span class="required_field">*</span></label>
                            <input type="text" class="form-control validar uppercase" id="txtApellidoMaterno" autocomplete="off" maxlength="50">
                            <span class="help-block hide">Este campo es obligatorio</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">Correo: <span class="required_field">*</span></label>
                            <input type="text" class="form-control validar uppercase" id="txtCorreo" autocomplete="off" maxlength="50">
                            <span class="help-block hide">Este campo es obligatorio</span>
                        </div>
                    </div>
                </div>
                <div class="callout callout-warning">
                    <h4>¡Importante!</h4>
                    <p>
                        Con los datos del responsable se le creara un usuario con el perfil "EMPRESA" y si el usuario existe se actualizarán sus datos.
                    </p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Cancelar</button>
                <button type="button" id="btnGuardarEmpresa" class="btn btn-primary"><i class="fa fa-save"></i> Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script>

        var urlListEmpresaPaginado = '@Url.Action("ListEmpresaPaginado", "Mantenimiento")';
        var urlSaveEmpresa = '@Url.Action("SaveEmpresa", "Mantenimiento")';
        var urlDeleteEmpresa = '@Url.Action("DeleteEmpresa", "Mantenimiento")';
        var urlGetEmpresa = '@Url.Action("GetEmpresa", "Mantenimiento")';
        var urlGetPersonaXdni = '@Url.Action("GetPersonaXdni", "Mantenimiento")';
    </script>

    <script src="~/js/pages/Mantenimiento/Empresas.min.js?v=@ViewBag.NumeroRelease"></script>
}

