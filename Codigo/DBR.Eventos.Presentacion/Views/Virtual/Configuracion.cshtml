
@{
    ViewBag.Title = "Configuracion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .UrlVideos{
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }
</style>
<section class="content-header">
    <h1 style="text-transform: uppercase;">
        @ViewBag.DescripcionHijo
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> @ViewBag.DescripcionPadre</a></li>
        <li class="active">@ViewBag.DescripcionHijo</li>
    </ol>
</section>

<section class="content">
    <div class="box box-primary">
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <select class="form-control validar select2" id="cboEvento"></select>
                    </div>
                </div>
            </div>
            <div class="row">
                <input value="0" type="hidden" id="txtViertualContenido" />
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <div class="row">
                        <div class="col-md-12" style="margin-bottom:5px;">
                            <a id="btnEditarContenido" class="btn btn-primary"><i class="fa fa-pencil"></i>  Editar</a>
                            <a id="btnGuardarContenido" class="btn btn-primary" style="display:none;"><i class="fa fa-save"></i>  Guardar</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <textarea class="form-control" id="txtMensajeCompleto" rows="30" style="min-width:100%;"></textarea>
                                <span class="help-block hide" id="textErrorObligatorio">Este campo es obligarorio</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="row">
                        <div class="col-md-12 text-right" style="margin-bottom:5px;">
                            <a id="btnAgregarVideo" class="btn btn-primary"><i class="fa fa-plus-circle"></i>  Agregar</a>
                        </div>
                    </div>
                    <div class="table-responsive" style="min-height:calc(100vh - 250px);">
                        <table class="table table-bordered table-striped dt-responsive nowrap" style="width:100%">
                            <thead>
                                <tr>
                                    <th style="width:80%;" id="cabeceraGrilla">Url</th>
                                    <th style="width:20%;"  class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="bodyVirtualVideo">
                                <tr>
                                    <td colspan="2">No se encontraron registros</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" data-backdrop="static" data-keyboard="false" id="modalVirtualVideo">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="lblTitleAgregarVirtualVideo">Agregar</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <input type="hidden" value="0" id="txtIdVirtualVideo" />
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="">Url<span class="required_field">*</span></label>
                            <input type="text" class="form-control validar" id="txtUrl" maxlength="250">
                            <span class="help-block hide">Este campo es obligatorio</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Cancelar</button>
                <button type="button" id="btnGuardarVirtualVideo" class="btn btn-primary"><i class="fa fa-save"></i> Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/plugins/ckeditor/ckeditor.js"></script>
    <script src="~/plugins/ckeditor/lang/es.js"></script>
    <script>
        var urlListAllEventoCombo = '@Url.Action("ListAllEventoCombo", "Virtual")';
        var urlGetContenidoVirtualByEvento = '@Url.Action("GetContenidoVirtualByEvento", "Virtual")';
        var urlSaveVirtualContenido = '@Url.Action("SaveVirtualContenido", "Virtual")';
        var urlListVirtualVideoByEvento = '@Url.Action("ListVirtualVideoByEvento", "Virtual")';
        var urlSaveVirtualVideo = '@Url.Action("SaveVirtualVideo", "Virtual")';
        var urlGetVirtualVideo = '@Url.Action("GetVirtualVideo", "Virtual")';
        var urlDeleteVirtualVideo = '@Url.Action("DeleteVirtualVideo", "Virtual")';
    </script>

    <script src="~/js/pages/Virtual/Configuracion.min.js?v=@ViewBag.NumeroRelease"></script>
}