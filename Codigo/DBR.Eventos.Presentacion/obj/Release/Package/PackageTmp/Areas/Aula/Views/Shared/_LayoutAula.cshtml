    </header>
    <!-- Header End -->
    <!-- Left Sidebar Start -->
    <nav class="vertical_nav">
        <div class="left_section menu_left" id="js-menu">
            <div class="left_section">
                <ul>
                    <li class="menu--item">
                        <a href="@Url.Action("Index", "Cursos", new { area = "Aula" })" class="menu--link @Html.IsSelected("Aula", "Cursos", "Index", "active")" title="Dashboard">
                            <i class="uil uil-apps menu--icon"></i>
                            <span class="menu--label">Dashboard</span>
                        </a>
                    </li>
                    @{
                        List<OpcionResponse> _options = new List<OpcionResponse>();
                        var faCookie = Request.Cookies[NameCookies._OPTIONS];
                        if (faCookie != null)
                        {
                            _options = JsonConvert.DeserializeObject<List<OpcionResponse>>(AESEncrytDecry.DecryptStringAES(faCookie.Value, Configuracion.TokenEncriptado));
                        }
                        var Opciones = _options;
                        var OpcionesPadres = Opciones.Where(x => x.IdPadre == null && x.Id != 11).ToList();
                    }
                    @foreach (var item in OpcionesPadres)
                    {
                        var OpcionesHijos = Opciones.Where(x => x.IdPadre == item.Id).ToList();

                        if (OpcionesHijos.Count() == 0)
                        {
                            <li class="menu--item">
                                <a href="~/@item.UrlDescripcion" class="menu--link @Html.IsSelected(item.UrlDescripcion.Split('/')[0], item.UrlDescripcion.Split('/')[1], item.UrlDescripcion.Split('/')[2], "active")" title="@item.Descripcion">
                                    <i class="@item.Icono menu--icon"></i>
                                    <span class="menu--label">@item.Descripcion</span>
                                </a>
                            </li>
                        }
                        else
                        {

                        }

                    }
                    <li class="menu--item">
                        <a href="@Url.Action("Setting", "Cursos", new { area = "Aula" })" class="menu--link @Html.IsSelected("Aula", "Cursos", "Setting", "active")" title="Configuración">
                            <i class="uil uil-cog menu--icon"></i>
                            <span class="menu--label">Configuración</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Left Sidebar End -->
    <!-- Body Start -->
    <div class="wrapper">
        @RenderBody()
        <footer class="footer mt-40">
