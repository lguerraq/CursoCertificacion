                                                <span class="section-header-length">@item.Lecciones.Sum(l=>l.Duracion) min</span>
                                            </div>
                                        </a>
                                        <div class="ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom">
                                            @foreach (var leccion in item.Lecciones)
                                            {
                                                <div class="lecture-container">
